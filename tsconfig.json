{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"outDir": "./dist",
		"lib": [
			"es2017"
		],
		"typeRoots": [
			"./lib/@types"
		],
		"types": [
			"node"
		],
		"forceConsistentCasingInFileNames": true,
		"pretty": false,
		"target": "ES2017",
		"noImplicitAny": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"disableSizeLimit": true,
		// "allowJs": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"$loggr": [
				"src/loggr"
			],
			"$plugins": [
				"src/server/plugins"
			],
			"$components": [
				"src/server/components"
			],
			"$root": [
				"src"
			],
			"$server": [
				"src/server"
			]
		}
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./node_modules"
	]
}